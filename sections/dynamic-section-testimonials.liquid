      "default": "all"
    }
  ],
  "blocks": [
    {
      "type":"content",
      "name":"Block content",
      "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Author",
            "default": "Author"
        },
        {
            "type": "richtext",
            "id": "review",
            "label": "Review",
            "default": "<p>Add customer reviews and testimonials to showcase your storeâ€™s happy customers.</p>"
        },
        {
            "type": "range",
            "id": "rating",
            "label": "Rating",
            "min": 1,
            "max": 5,
            "step": 1,
            "default": 4
        }
      ]
    }
  ]
}
