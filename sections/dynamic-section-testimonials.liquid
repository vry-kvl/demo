    },
    {
      "type":"color",
      "id":"section_heading_color",
      "label":"Heading color"
    },
    {
       "type":"header",
       "content":"Bottom button"
    },
    {
      "type":"text",
      "id":"section_button",
      "label":"Button label"
    },
    {
