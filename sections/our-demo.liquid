  <div class="popup-layer js-popup-close"></div>

  <div class="popup-inner">
    <button type="button" class="btn btn-popup-close js-popup-close">
        {%- render 'svg', type: 'close' -%}
    </button>

    <div class="popup-content our-demo-ct">
      <div class="our-demo-content">
        <h3 class="demo-title">{{section.settings.header}}</h3>

        <div class="demo-wrapper">
          {%- for block in section.blocks -%}
          <div class="demo-box">
            <a href="{{block.settings.link}}">
              <div class="demo-img">
                {{ block.settings.image | image_url: width: 300 | image_tag }}
              </div>
              <span class="demo-name">{{block.settings.title}}</span>
            </a>
          </div>
          {%- endfor -%}
        </div>

        <div class="buy-it-now text-right">
          <a href="{{section.settings.link}}" target="_blank" class="buy-our-theme fw600 inline-block">
