{%- case type -%}
	{%- when 'width' -%}
		{%- assign _swbootstrap = number | split: ',' -%}
		{%- assign _out = '' -%}

		{%- if _swbootstrap.size == 1 -%}
			{%- unless _swbootstrap[0] == '0' -%}
		    	{%- assign _swbootstrap = _swbootstrap[0] | strip | prepend: 'col-' | split: '.' | first  -%}
			{%- else -%}					
		    	{%- assign _swbootstrap = 'd-none' -%}
			{%- endunless -%}
		   	{%- assign _out = _swbootstrap -%}
		{%- else -%}
		    {%- case _swbootstrap.size -%}
		      {%- when 2 -%}{%- assign ii = 1 -%}{%- assign arClass = 'col-md-, col-' -%}
		      {%- when 3 -%}{%- assign ii = 2 -%}{%- assign arClass = 'col-lg-, col-md-, col-' -%}
		      {%- when 4 -%}{%- assign ii = 3 -%}{%- assign arClass = 'col-lg-, col-md-, col-sm-, col-' -%}
		      {%- when 5 -%}{%- assign ii = 4 -%}{%- assign arClass = 'col-xl-, col-lg-, col-md-, col-sm-, col-' -%}
		      {%- else -%}  {%- assign ii = 5 -%}{%- assign arClass = 'col-xl-, col-lg-, col-md-, col-sm-, col-xxs-, col-' -%}
		    {%- endcase -%}
		    {%- assign arrClass    = arClass | split: ',' -%}
		    {%- for i in (0..ii) -%}
		    	{%- unless _swbootstrap[i] == '0' -%}
		        	{%- assign _classItem = _swbootstrap[i] | strip | prepend: arrClass[i] | split: '.' | first -%}
		    	{%- else -%}		    		
		        	{%- assign _classItem = 'none' | prepend: arrClass[i] | replace: 'col-','' -%}
		        	{%- if _classItem == ' none' -%}
		        		{%- assign _classItem = ' xs-none' -%}
		        	{%- endif -%}
		    	{%- endunless -%}

		        {%- assign _out = _out | append: _classItem -%}
		    {%- endfor -%}

		{%- endif -%}
	{%- else -%}
		{%- assign _set_width_bootstrap = number | strip | split: '.' | first | plus: 0 -%}
		{%- case _set_width_bootstrap -%}
			{%- when 6 -%}{%- assign _out = "2"   -%}
			{%- when 5 -%}{%- assign _out = "5th" -%}
			{%- when 4 -%}{%- assign _out = "3"   -%}
			{%- when 3 -%}{%- assign _out = "4"   -%}
			{%- when 2 -%}{%- assign _out = "6"   -%}
			{%- when 1 -%}{%- assign _out = "12"  -%}
			{%- else -%}  {%- assign _out =  number | append: 'th' -%}
		{%- endcase -%}
{%- endcase -%}

{%- comment -%}
	**
	* Output
	*
{%- endcomment-%}
{{_out}}